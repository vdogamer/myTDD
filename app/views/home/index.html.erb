<h1>Home#index</h1>

<br />
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.title %></td>
        <td><%= user.content %></td>        
      </tr>
    <% end %>
  </tbody>
</table>

<% if user_signed_in? %>


  <div>Thanks for signing in!!!</div>
  <%= link_to 'Create Content!', update_path %><br />
  <%= link_to 'Sign Out', destroy_user_session_path, method: :delete %>
<% end %>
